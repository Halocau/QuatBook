<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>refundhome</filter-name>
        <filter-class>controller.filter.refundhome</filter-class>
    </filter>
    <filter>
        <filter-name>adminFilterBlock</filter-name>
        <filter-class>controller.filter.adminFilterBlock</filter-class>
    </filter>
    <filter>
        <filter-name>userFilterBlock</filter-name>
        <filter-class>controller.filter.userFilterBlock</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>refundhome</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>adminFilterBlock</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>userFilterBlock</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.homepage.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>controller.homepage.productController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashBoardAdmin</servlet-name>
        <servlet-class>controller.admin.DashBoardAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controllProductAdmin</servlet-name>
        <servlet-class>controller.admin.controllProductAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.authen.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashBoardUser</servlet-name>
        <servlet-class>controller.user.DashBoardUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartController</servlet-name>
        <servlet-class>controller.user.cartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminManagerUser</servlet-name>
        <servlet-class>controller.admin.adminManagerUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/productdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashBoardAdmin</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controllProductAdmin</servlet-name>
        <url-pattern>/admin/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/authen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashBoardUser</servlet-name>
        <url-pattern>/user/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminManagerUser</servlet-name>
        <url-pattern>/admin/manageruser</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
